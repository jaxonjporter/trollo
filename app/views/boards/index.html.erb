
<div class="col-sm-12 title text-center mt-2"><h1>BOARDS</h1></div>
  <% @boards.each do |board| %>
    <div class="col-sm-4">
      <div class="card text-white bg-dark text-center m-3">
        <div class="card-header">
          <h1 class="card-title">
            <%= link_to board.name , board_path(board), class: "text-light"%>
          </h1>
        </div>
      <div class="row text-center">
        <div class="col-6">
          <%= link_to "Edit", edit_board_path(board) %>
        </div>
        <div class="col-6">
          <%= link_to "Delete", board_path(board), method: :delete %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
